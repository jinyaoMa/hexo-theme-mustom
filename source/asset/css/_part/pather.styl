@keyframes pather-appear
  from
    opacity 0
  to
    opacity 1

.p-pather
  user-select none
  animation pather-appear 0.6s ease
  overflow hidden
  height 3em

.p-pather-home
  float left
  line-height 1
  padding $font_size - 1px $font_size - 1px $font_size $font_size - 1px
  background var(--color-clear)
  border-radius $gap * 0.5 0 0 ($gap * 0.5)

.p-pather-queue
  line-height 3
  white-space nowrap
  overflow-x hidden
  overflow-y auto
  height calc(3em - 2px)
  a
    display block
    float left
    color var(--color-text)
    background var(--color-clear)
    line-height $font_size * 1.5
    font-size $font_size - 2px
    padding 0 $font_size * 0.5
    margin $font_size * 0.75 - 1px 0
    border-radius $font_size * 0.5 0
    margin-left 0.75em
    transition background 0.6s, color 0.2s
    &:hover
      color var(--color-background)
      background var(--color-text)