@keyframes xsearch-i-appear
  from
    opacity 0
  to
    opacity 1

.p-xsearch
  width 2em
  line-height 2
  margin 0.5em
  border-radius $gap * 0.5
  text-align center
  transition background 0.6s
  cursor pointer
  user-select none
  float right
  i
    animation xsearch-i-appear 0.6s ease
  i:nth-child(2)
    display none
  @media (min-width: $app_mobile_width_min)
    &:hover
      background var(--color-clear)
    &:active
      transform scale(0.9)
  &.active
    i:nth-child(1)
      display none
    i:nth-child(2)
      display inline-block